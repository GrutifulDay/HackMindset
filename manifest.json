{
  "manifest_version": 3,
  "name": "HackMindset",
  "version": "1.0",
  "description": "An educational extension that delivers daily space photos, digital wisdom, and inspiring content.",
  "action": {
    "default_icon": {
      "16": "frontend/assets/icons/icon16.png",
      "48": "frontend/assets/icons/icon48.png"
    },
    "default_popup": "frontend/app/index.html"
  },
  "background": {
    "service_worker": "frontend/app/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://api.nasa.gov/*",
    "https://www.instagram.com/*",
    "https://www.instagram.com/r.adeek777/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "frontend/assets/icons/logo-bulb.svg",
        "frontend/assets/sound.svg",
        "frontend/assets/sounds/dialup.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://instagram.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["frontend/app/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self'"
  }
}
