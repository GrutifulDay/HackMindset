{
  "manifest_version": 3,
  "name": "HackMindset<-production",
  "version": "1.0",
  "description": "An educational extension that delivers daily space photos, digital wisdom, and inspiring content.",
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/zarovka128.png"
    },
    "default_popup": "app/index.html"
  },
  "background": {
    "service_worker": "app/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://hackmindset.app/*",
    "https://api.nasa.gov/*",
    "https://*.instagram.com/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/icons/logo-bulb.svg",
      "assets/icons/sound.svg",
      "assets/sounds/modemSound.mp3"
    ],
    "matches": ["https://*.instagram.com/*"]
  }],
  "content_scripts": [
    {
      "matches": [
        "*://instagram.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["app/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://hackmindset.app https://api.nasa.gov"
  }
}
