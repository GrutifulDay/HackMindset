{
  "manifest_version": 3,
  "name": "HackMindset",
  "version": "1.0",
  "description": "Discover space, history, retro tech, and digital wisdomâ€”daily insights with inspiring Instagram tips.",

  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png"
    },
    "default_title": "HackMindset",
    "default_popup": "app/index.html"
  },

  "background": {
    "service_worker": "app/background.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "alarms"
  ],

  "host_permissions": [
    "https://api.nasa.gov/*",
    "https://hackmindset.app/*",
    "*://*.instagram.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["app/content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/logo-bulb.svg",
        "frontend/assets/icons/logo-bulb.svg",
        "assets/sound.svg",
        "assets/sounds/dialup.mp3"
      ],
      "matches": ["*://*.instagram.com/*"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' https: data:; connect-src 'self' https://api.nasa.gov https://hackmindset.app; media-src 'self' https: data:; font-src 'self' data:; object-src 'none'"
  },

  "homepage_url": "https://github.com/GrutifulDay/HackMindset"
}
