{
  "manifest_version": 3,
  "name": "Moje Rozšíření",
  "version": "1.0",
  "description": "Rozšíření, které zobrazuje NASA obrázky, pozitivní zprávy a hashtagy.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.nasa.gov/*",
    "https://api.goodnewsnetwork.org/*",
    "https://supabase.io/*",
    "https://www.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
