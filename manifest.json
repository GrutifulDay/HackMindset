{
    "manifest_version": 3,
    "name": "Moje Google Rozšíření",
    "version": "1.0",
    "description": "Rozšíření zobrazující NASA APOD a další vzdělávací obsah.",
    "permissions": ["storage", "activeTab", "scripting", "alarms"],

    "host_permissions": [
      "https://api.nasa.gov/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.google.com/*"],
        "js": ["js/content.js"]
      }
    ]
  }
  